{
  "name": "eko agent",
  "description": "Eko Agent Extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "type": "module",
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["eko/extension.js", "js/content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "alarms",
    "storage",
    "scripting",
    "activeTab",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
      "matches": ["<all_urls>"],
      "resources": ["eko/script/*"]
  }]
}
